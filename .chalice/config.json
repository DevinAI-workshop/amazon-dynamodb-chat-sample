{
  "version": "2.0",
  "app_name": "dynamodb-python-chat-sample",
    "autogen_policy": false,
    "lambda_memory_size": 2048,
    "stages": {
        "local": {
          "api_gateway_stage": "api",
            "environment_variables": {
                "API_ENDPOINT": "localhost"
            }
        },
      "dev": {
        "api_gateway_stage": "api",
        "environment_variables": {
                "API_ENDPOINT": "https://your-api-endpoint.amazonaws.com/api/",
                "WEBSOCKET_ENDPOINT": "https://your-websocket-endpoint.amazonaws.com/prod"
            }
        }
    }
}
